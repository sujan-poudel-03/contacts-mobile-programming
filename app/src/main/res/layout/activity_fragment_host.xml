<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentHostActivity">

    <!--
    This is the static fragment declaration from Hour 1. We are commenting it out
    to switch to a dynamic approach. The system will no longer automatically create
    and display this fragment on startup.
    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.contacts.FirstFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/showFragment1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Fragment 1"/>

        <Button
            android:id="@+id/showFragment2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Show Fragment 2"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E0E0E0" />

</LinearLayout>